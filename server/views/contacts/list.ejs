<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  

  <!-- Content for Contact List View Page-->
  <main class="table-layout">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1><%= title %></h1>


            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                        <th class="text-center col-3">Contact Name</th>
                        <th class="text-center col-4">Contact Number</th>
                        <th class="text-center col-3">Email Address</th>
                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < ContactList.length; count++) { %>
                    <tr class="d-flex">
                            <td class="text-center col-3"><%= ContactList[count].username %></td>
                            <td class="text-center col-4"><%= ContactList[count].phone %></td>
                            <td class="text-center col-3"><%= ContactList[count].email %></td>          
                            <td class="text-center col-1">
                                <a href="/contact-list/edit/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i>Update</a>
                            </td>
                            <td class="text-center col-1">
                                <a href="/contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i>Delete</a>
                            </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  





